{
  "name": "datadog-synthetics-github-action",
  "version": "0.0.0",
  "private": true,
  "description": "A Datadog Synthetics CI Github Action",
  "main": "lib/main.js",
  "scripts": {
    "build": "yarn clean; tsc",
    "clean": "rm -rf dist/*",
    "format-check": "prettier --check **/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "format": "yarn tslint --fix && yarn prettier --write",
    "lint": "(yarn tslint && yarn prettier --check) || (echo \"\nYou can fix this by running ==> yarn format <==\n\" && false)",
    "prettier": "prettier \"src/**/*.{ts,js,json,yml}\" --ignore-path .gitignore",
    "tslint": "tslint -p tsconfig.json -c tslint.json",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Datadog",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@datadog/datadog-ci": "^0.17.6",
    "chalk": "3.0.0",
    "clipanion": "^3.0.1",
    "deep-extend": "0.6.0"
  },
  "devDependencies": {
    "@types/deep-extend": "0.4.31",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.3.3",
    "@typescript-eslint/parser": "^4.28.3",
    "@vercel/ncc": "^0.29.0",
    "jest": "^27.0.6",
    "js-yaml": "^4.1.0",
    "prettier": "2.2.1",
    "ts-jest": "^27.0.3",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-lines-between-class-members": "1.3.6",
    "typescript": "^4.1.3"
  }
}
